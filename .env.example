# Example environment variables for local development
# Copy this file to `.env` and fill secrets before running `docker compose up`

# Postgres credentials
POSTGRES_USER=backend
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=backend_db

# Spring datasource (overrides POSTGRES_* if set differently)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/backend_db
SPRING_DATASOURCE_USERNAME=backend
SPRING_DATASOURCE_PASSWORD=change_me_in_production
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA behavior for development (none/update/validate/create)
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# API security secret
API_SECURITY_TOKEN_SECRET=change_me_in_production
